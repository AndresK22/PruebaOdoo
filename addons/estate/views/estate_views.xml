<?xml version="1.0"?>
<odoo>
    <record id="test_estate_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="test_menu_root" name="Real Estate">
        <menuitem id="test_first_level_menu" name="Advertisements">
            <menuitem id="test_estate_menu_action" action="test_estate_action"/>
        </menuitem>
    </menuitem>


    <record id="estate_view_search" model="ir.ui.view">
        <field name="name">estate.view.search</field>
        <field name="model">estate</field>
        <field name="arch" type="xml">
            <search string="Buscar viviendas">
                <filter string="Estado" name="state" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <group expand="1" string="Agrupar por">
                    <filter string="Codigo postal" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
                <field name="name"/>
                <separator/>
                <field name="postcode"/>
                <separator/>
                <field name="expected_price"/>
                <separator/>
                <field name="bedrooms"/>
                <separator/>
                <field name="living_area"/>
                <separator/>
                <field name="facades"/>
            </search>
        </field>
    </record>


    <record id="estate_view_tree" model="ir.ui.view">
        <field name="name">estate.tree</field>
        <field name="model">estate</field>
        <field name="arch" type="xml">
            <tree string="Tests">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>


    <record id="estate_view_form" model="ir.ui.view">
        <field name="name">estate.form</field>
        <field name="model">estate</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <header>
                        <group>
                            <field name="name"/>
                        </group>
                    </header>
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                        <notebook>
                            <page string="Descripcion">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="state"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>