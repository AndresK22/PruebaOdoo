<?xml version="1.0"?>
<odoo>
    <record id="estate_view_form" model="ir.ui.view">
        <field name="name">estate.form</field>
        <field name="model">estate</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <header>
                        <group>
                            <field name="name"/>
                            <field name="property_tag_id" widget="many2many_tags"/>
                        </group>
                    </header>
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                        <notebook>
                            <page string="Descripcion">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="total_area"/>
                                    <field name="state"/>
                                </group>
                            </page>

                            <page string="Ofertas">
                                <field name="offer_ids">
                                    <tree string="Ofertas">
                                        <field name="price"/>
                                        <field name="status"/>
                                        <field name="partner_id"/>
                                        <field name="validity"/>
                                        <field name="date_deadline" widget="date"/>
                                        <field name="property_id"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Informacion adicional">
                                <group>
                                    <field name="partner_id"/>
                                    <field name="users_id"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="estate_type_view_form" model="ir.ui.view">
        <field name="name">estate.type.form</field>
        <field name="model">estate_type</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <header>
                        <group>
                            <field name="name"/>
                        </group>
                    </header>
                </sheet>
            </form>
        </field>
    </record>


</odoo>